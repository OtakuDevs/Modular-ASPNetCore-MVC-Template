{
  "$schema": "http://json.schemastore.org/template",
  "author": "OtakuDevs",
  "classifications": [ "Web", "MVC", "Modular" ],
  "identity": "OtakuDevs.ModularAspNetCoreMvcTemplate",
  "name": "Modular ASP.NET Core MVC Template",
  "shortName": "modularmvc",
  "sourceName": "MyApp",
  "preferNameDirectory": true,
  "description": "A modular ASP.NET Core MVC project template by OtakuDevs.",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".template.config/**", ".vs/**", ".idea/**", "**/bin/**", "**/obj/**" ]
        }
      ]
    },
    {
      "include": [ "MyApp.sln" ]
    }
  ]
}
